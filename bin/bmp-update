#/bin/sh

# PODNAME: bmp-update
# ABSTRACT: build the newest version of the BMP proxy
# bail out asap
set -e

# HOME=$(perldoc -l Honeydew::ProxyService | sed 's/.pm$//')
HOME=$(git rev-parse --show-toplevel)/lib/Honeydew/ProxyService
TMP_GIT_DIR=$HOME/tmp-browsermob-proxy
mkdir -p $HOME

cd $HOME
rm -rf $TMP_GIT_DIR

# get source
git clone --depth 1 -o db0914f537282ac0c321036db7640b5d8ac87679 https://github.com/lightbody/browsermob-proxy $TMP_GIT_DIR
cd $TMP_GIT_DIR

# generate binaries
mvn clean install -P release -DskipTests
cd browsermob-dist/target/

DIST=browsermob-proxy-2.1.0-beta-2-SNAPSHOT
unzip -o $DIST-bin.zip

DEST=$HOME/browsermob-proxy
rm -rf $DEST

# put the binaries where we expect to find them
cp -R $DIST/ $DEST

# cleanup
cd $HOME
rm -rf $TMP_GIT_DIR

__END__

=pod

=encoding UTF-8

=head1 NAME

bmp-update - build the newest version of the BMP proxy

=head1 VERSION

version 0.02

